<section class="ftco-section testimony-section bg-bottom" style="background-image: url('{{asset('assets')}}/home/images/bg_3.jpg');">
	<div class="container">
		<div class="row justify-content-center pb-4">
			<div class="col-md-7 text-center heading-section ftco-animate">
				<h2 class="mb-4">Tourist Feedback</h2>
			</div>
		</div>
		<div class="row ftco-animate">
			<div class="col-md-12">
				<div class="carousel-testimony owl-carousel ftco-owl">

					{% for rs in slider %}
						
							<div class="item">
								<div class="testimony-wrap py-4">

									<a href="{{path('travel_show', {'id':rs.id})}}"><img src="{{asset('uploads/images/' ~ rs.image)}}" style="witdh:330px;height:295px"></a>
									<div class="d-flex align-items-center">
										<div class="pl-3">
											<p class="name">{{ rs.title }}</p>
											<span class="position">{{ rs.description }}</span>
										</div>
									</div>	

								</div>
							</div>
						
					{% endfor %}


				</div>
			</div>
		</div>
	</div>
</section>
