{% extends 'adminbase.html.twig' %}

{% block title %}Travel index
{% endblock %}

{% block body %}

<SCRIPT language="JavaScript" type="text/javascript">
	function openWin( windowURL, windowName,windowFeatures) { window.open(windowURL, windowName, windowFeatures); }
</SCRIPT>

 <div>
 <div>
 <div class="main-panel">
            <div class="content">
                <div class="page-inner">
                    <div class="page-header">
                        <h4 class="page-title">Avatars</h4>
                        <ul class="breadcrumbs">
                            <li class="nav-home">
                                <a href="#">
                                    <i class="flaticon-home"></i>
                                </a>
                            </li>
                            <li class="separator">
                                <i class="flaticon-right-arrow"></i>
                            </li>
                            <li class="nav-item">
                                <a href="#">Base</a>
                            </li>
                            <li class="separator">
                                <i class="flaticon-right-arrow"></i>
                            </li>
                            <li class="nav-item">
                                <a href="#">Avatars</a>
                            </li>
                        </ul>
                    </div>

									<table class="table table-bordered table-head-bg-info table-bordered-bd-info mt-4">
										<thead>
											<tr>
												<th>Id</th>
												<th>Kategori</th>
												<th>Title</th>
												<th>Keywords</th>
												<th>Description</th>
												<th>Image</th>
												<th>Status</th>
												<th>Star</th>
												<th>Address</th>
												{# <th>Phone</th>
												                <th>Fax</th> #}
												<th>Email</th>
												<th>City</th>
												<th>Country</th>
												<th>Gallery</th>
												<th>Location</th>
												{# <th>Created_at</th>
												                <th>Updated_at</th> #}
												<th>actions</th>
											</tr>
										</thead>
										<tbody>
											{% for travel in travels %}
												<tr>
													<td>{{ travel.id }}</td>
													<td>{{ travel.catname }}</td>
													<td>{{ travel.title }}</td>
													<td>{{ travel.keywords }}</td>
													<td>{{ travel.description }}</td>
													<td><img src="{{asset('uploads/images/'~travel.image)}}" height="40"></td>
													<td>{{ travel.status }}</td>
													<td>{{ travel.star }}</td>
													<td>{{ travel.address }}</td>
													{# <td>{{ travel.phone }}</td>
													                <td>{{ travel.fax }}</td> #}
													<td>{{ travel.email }}</td>
													<td>{{ travel.city }}</td>
													<td>{{ travel.country }}</td>
													<td>
														<a href="javascript:openWin('{{ path('admin_image_new',{'id':travel.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=700');">                  
														<img src="{{asset('assets/admin/assets/img')}}/gallery.png" height="40">
														</a>
													</td>	
													<td>{{ travel.location }}</td>
													{# <td>{{ travel.createdAt ? travel.createdAt|date('Y-m-d H:i:s') : '' }}</td>
													                <td>{{ travel.updatedAt ? travel.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
													<td>
														<a href="{{ path('admin_travel_show', {'id': travel.id}) }}"><button class="btn btn-primary btn-sm">show</button></a>
														<a href="{{ path('admin_travel_edit', {'id': travel.id}) }}"><button class="btn btn-secondary btn-sm">edit</button></a>
                                            </td>
													</td>
												</tr>
											{% else %}
												<tr>
													<td colspan="17">no records found</td>
												</tr>
											{% endfor %}
										</tbody>
									</table>

									<a href="{{ path('admin_travel_new') }}"><button class="btn btn-success">Create new</button></a>
								
                </div>
            </div>
        </div>
    </div>
    </div>

	{% endblock %}
