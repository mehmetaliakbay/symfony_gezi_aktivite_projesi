{% extends 'base.html.twig' %}

{% block title %}Image
{% endblock %}

{% block body %}
	<h1>Image</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ image.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ image.title }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ image.image }}</td>
			</tr>
		</tbody>
	</table>


	<a href="{{ path('admin_image_edit', {'id': image.id}) }}">
		<button class="btn btn-primary">Edit</button>
	</a>

	{{ include('admin/image/_delete_form.html.twig') }}
	<br>
	<br>
	<a href="{{ path('admin_image_index') }}">
		<button class="btn btn-default btn-sm">Back the list</button>
	</a>
{% endblock %}
