{% extends 'homebase.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}

	<section class="ftco-section ftco-no-pt ftco-no-pb">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 order-md-last ftco-animate py-md-5 mt-md-5">
					<div class="comment-form-wrap pt-5">
						<h3 class="mb-5">Login</h3>
						<form method="post" class="p-5 bg-light" action="/loginuser">
							<div class="form-group">
								<div class="form-group">
									<label for="email">Email *</label>
									<input type="email" class="form-control" id="email"  value="{{ last_username }}" name="email" placeholder="Email">
								</div>
								<label for="name">Password *</label>
								<input type="password" class="form-control" id="name" name="password" required>
							</div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<div class="form-group">
								<input type="submit" value="Login" class="btn py-3 px-4 btn-primary">
							</div>

						</form>
					</div>

					
		</div>
	</div>
</section>
<!-- .section -->

				{% endblock %}
